<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#4C78947A"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Bottom navigation panel -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/navigation_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <!-- Your Activity -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="381dp"
        android:layout_height="237dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Activity"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:translationX="10dp" />

        <!-- Line Chart -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="335dp"
            android:layout_height="171dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_card_background" />

    </LinearLayout>

    <!-- Recent Sessions -->
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="357dp"
        android:layout_height="167dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="17dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="Recent Sessions"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:translationX="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/recent_session_img1"
                android:layout_width="wrap_content"
                android:layout_height="95dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/recent_session_img2"
                android:layout_width="wrap_content"
                android:layout_height="95dp"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:scaleType="centerCrop" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="450dp"
        android:layout_height="80dp"
        android:background="#EEEEEE"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">


        <!-- Home Box -->
        <LinearLayout
            android:id="@+id/box_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#94356836"
            android:contentDescription="Home Box"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_image"
                android:layout_width="42dp"
                android:layout_height="40dp"
                android:contentDescription="Home Image"
                android:src="@drawable/home3" />

            <TextView
                android:id="@+id/textHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Home" />
        </LinearLayout>


        <!-- Capture Box -->
        <LinearLayout
            android:id="@+id/box_capture"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#94356836"
            android:contentDescription="Capture Box"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/capture_image"
                android:layout_width="42dp"
                android:layout_height="40dp"
                android:contentDescription="Home Image"
                android:src="@drawable/capture" />

            <TextView
                android:id="@+id/textCapture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Capture" />
        </LinearLayout>


        <!-- Feedback Box -->
        <LinearLayout
            android:id="@+id/box_feedback"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#94356836"
            android:contentDescription="Feedback Box"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Feedback_image"
                android:layout_width="42dp"
                android:layout_height="40dp"
                android:contentDescription="Home Image"
                android:src="@drawable/feedback" />

            <TextView
                android:id="@+id/textFeedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Feedback" />
        </LinearLayout>

    </LinearLayout>

    <!-- Top Box -->
    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#7C9A7E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- UserIconBox -->
        <LinearLayout
            android:id="@+id/box_user"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="bottom|right"
            android:orientation="vertical"
            android:translationX="-10dp">

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="52dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:contentDescription="Home Image"
                android:translationY="20dp"
                app:srcCompat="@drawable/userpic" />

        </LinearLayout>

        <!-- "Welcome User" Text -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:text="Welcome User!"
            android:textSize="18sp"
            android:textStyle="bold"
            android:translationX="15dp"
            android:translationY="-15dp" />

        <!-- Coach's Tip of the day -->

    </FrameLayout>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_card"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="ðŸŽ¾ Coachâ€™s Tip of the Day"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="534dp" />

        <TextView
            android:id="@+id/tip_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="âš¡ Focus on racket swing speed"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="578dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
