<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4E734E"
    tools:context=".FeedbackPage">

    <!-- Bottom navigation panel -->

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#81C885"
        android:contentDescription="@string/video_analysis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="166dp"
        android:layout_height="31dp"
        android:text="@string/video_analysis"
        android:textColor="#FAF7F7"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.616"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.484" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="166dp"
        android:layout_height="31dp"
        android:text="@string/perf"
        android:textColor="#FAF7F7"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout2"
        app:layout_constraintVertical_bias="0.532" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#81C885"
        android:contentDescription="@string/perf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:srcCompat="@tools:sample/avatars" />

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#7C9A7E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- UserIcon -->
        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="bottom|end"
            android:orientation="vertical"
            android:translationX="-10dp">

            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:contentDescription="@string/HomeImg"
                android:translationY="20dp"
                app:srcCompat="@drawable/userpic" />

        </LinearLayout>

        <!-- "Welcome User" Text -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:text="@string/welcome"
            android:textSize="18sp"
            android:textStyle="bold"
            android:translationX="15dp"
            android:translationY="-15dp" />

    </FrameLayout>

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="172dp"
        android:layout_height="171dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="7dp"
        android:backgroundTint="#81C885"
        android:contentDescription="@string/coachFeed"
        app:layout_constraintBottom_toTopOf="@+id/navigation_bar"
        app:layout_constraintEnd_toStartOf="@+id/imageButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="166dp"
        android:layout_height="31dp"
        android:layout_marginBottom="5dp"
        android:text="@string/coachFeed"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FAF7F7"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/fragment_container"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.743" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="172dp"
        android:layout_height="171dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="7dp"
        android:backgroundTint="#81C885"
        android:contentDescription="@string/comp"
        app:layout_constraintBottom_toTopOf="@+id/navigation_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButton5"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="166dp"
        android:layout_height="31dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="5dp"
        android:text="@string/comp"
        android:textColor="#FAF7F7"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/fragment_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.743" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/navigation_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintVertical_bias="0.0" />

    <!-- Top Box -->
    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="470dp"
        android:layout_height="80dp"
        android:background="#EEEEEE"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">


        <!-- Home Box -->
        <LinearLayout
            android:id="@+id/box_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#94356836"
            android:contentDescription="@string/HomeBox"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_image"
                android:layout_width="42dp"
                android:layout_height="40dp"
                android:contentDescription="@string/HomeImg"
                android:src="@drawable/home3" />

            <TextView
                android:id="@+id/textHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/Home" />
        </LinearLayout>


        <!-- Capture Box -->
        <LinearLayout
            android:id="@+id/box_capture"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#94356836"
            android:contentDescription="@string/CapBox"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/capture_image"
                android:layout_width="42dp"
                android:layout_height="40dp"
                android:contentDescription="@string/CapImg"
                android:src="@drawable/capture" />

            <TextView
                android:id="@+id/textCapture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/Cap" />
        </LinearLayout>


        <!-- Feedback Box -->
        <LinearLayout
            android:id="@+id/box_feedback"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#94356836"
            android:contentDescription="@string/FbBox"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Feedback_image"
                android:layout_width="42dp"
                android:layout_height="40dp"
                android:contentDescription="@string/FbImg"
                android:src="@drawable/feedback" />

            <TextView
                android:id="@+id/textFeedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/Fb" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#7C9A7E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- UserIconBox -->
        <LinearLayout
            android:id="@+id/box_user"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="bottom|right"
            android:orientation="vertical"
            android:translationX="-10dp">

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:contentDescription="Home Image"
                android:translationY="20dp"
                app:srcCompat="@drawable/userpic" />

        </LinearLayout>

    </FrameLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="205dp" />

</androidx.constraintlayout.widget.ConstraintLayout>